{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "framework": "react-router",
  "buildCommand": "pnpm run build",
  "devCommand": "pnpm run dev",
  "installCommand": "pnpm install",
  "outputDirectory": "build/client",
  "functions": {
    "build/server/**/*.js": {
      "runtime": "nodejs20.x",
      "memory": 256,
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/__react-router"
    }
  ]
}
